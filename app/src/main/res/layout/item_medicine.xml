        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/textViewTakenTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="@color/black"/>-->

</androidx.cardview.widget.CardView>