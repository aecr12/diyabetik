<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Tarih -->
    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Bugünün Tarihi"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large" />

    <!-- Adım Sayısı -->
    <TextView
        android:id="@+id/textViewStepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDate"
        android:text="0"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"

        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textSize="96sp"
        android:textStyle="bold" />

    <!-- Kartlar -->
    <LinearLayout
        android:id="@+id/kartlarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewStepCount"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Yakılan Kalori -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardCalorie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:padding="16dp"
                android:text="Yakılan Kalori: 0"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        </androidx.cardview.widget.CardView>

        <!-- Hız -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVelocity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewVelocity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:padding="16dp"
                android:text="Hız: 0"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        </androidx.cardview.widget.CardView>

        <!-- Geçen Süre -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:padding="16dp"
                android:text="Geçen Süre: 00:00:00"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        </androidx.cardview.widget.CardView>

        <!-- Yürünen Mesafe -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardDistance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/textViewDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:padding="16dp"
                android:text="Yürünen Mesafe: 0"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Başla/Durdur Butonu -->
    <Button
        android:id="@+id/baslaDurdurButton"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:text="Başla" />

</RelativeLayout>