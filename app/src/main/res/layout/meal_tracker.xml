<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Öğünler için üst kısım -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:elevation="8dp"
        android:text="Burada Öğünlerinizi Takip Edebilirsiniz."
        android:textColor="@color/black"
        android:textSize="20dp" />

    <!-- Kahvaltı Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/kahvalti_karti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:clickable="true"
        app:cardElevation="12dp"
        app:cardCornerRadius="18dp"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_meal_card_background"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Kahvaltı"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24sp" />

    </androidx.cardview.widget.CardView>

    <!-- Öğle Yemeği Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ogle_yemegi_karti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="18dp"
        app:cardElevation="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:radius="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_meal_card_background"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Öğle Yemeği"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24dp" />

    </androidx.cardview.widget.CardView>

    <!-- Akşam Yemeği Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/aksam_yemegi_karti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:cardElevation="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:radius="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_meal_card_background"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Akşam Yemeği"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24dp" />

    </androidx.cardview.widget.CardView>
    <!-- Ara Öğün Kartı -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ara_ogun_karti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="18dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        app:cardElevation="12dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:radius="8dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gradient_meal_card_background"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Ara Öğün"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="24dp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kaç bardak su içtiniz?"
            android:padding="16dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageButton
                android:id="@+id/azalt_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_left_24"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:id="@+id/sayac_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="36dp"
                android:padding="12dp"
                android:textColor="@color/black"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/arttir_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_right_24"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>