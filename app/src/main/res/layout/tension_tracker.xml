<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TensionTracker"
    android:padding="12dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextSystolic"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Sistolik"
        android:textSize="16dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDiastolic"
        android:maxLines="1"
        android:inputType="text"
        android:hint="Diastolik"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/editTextSystolic"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDate"
        android:maxLines="1"
        android:hint="Tarih seÃ§iniz"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/editTextDiastolic"/>

    <ImageButton
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:id="@+id/imageButtonCalendar"
        android:layout_alignBottom="@id/editTextDate"
        android:layout_toEndOf="@id/editTextDate"

        android:background="@drawable/calendar"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSave"
        android:background="@drawable/rounded_button"
        android:layout_margin="8dp"
        android:layout_below="@id/imageButtonCalendar"
        android:text="KAYDET"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSave"
        android:id="@+id/recyclerView"/>

</RelativeLayout>