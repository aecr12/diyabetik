<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lütfen aşağıdaki alanları eksiksiz doldurun"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle"
            android:layout_marginTop="24dp"
            android:hint="Boy (cm)"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextHeight"
            android:layout_marginTop="16dp"
            android:hint="Kilo (kg)"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <EditText
            android:id="@+id/editTextWaist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextWeight"
            android:layout_marginTop="16dp"
            android:hint="Bel Çevresi (cm)"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <EditText
            android:id="@+id/editTextBloodSugarValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextWaist"
            android:layout_marginTop="16dp"
            android:hint="Son Ölçülen Kan Şekeri Değeri (mg/dL)"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <EditText
            android:id="@+id/editTextHbA1cPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextBloodSugarValue"
            android:layout_marginTop="16dp"
            android:hint="HbA1c Değeri (%)"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <EditText
            android:id="@+id/editTextSistolik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextHbA1cPercent"
            android:layout_marginTop="16dp"
            android:hint="Sistolik Kan Basıncı/Tansiyon"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <EditText
            android:id="@+id/editTextDiyastolik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSistolik"
            android:layout_marginTop="16dp"
            android:hint="Diyastolik Kan Basıncı/Tansiyon"
            android:inputType="numberDecimal"
            android:textColorHint="#a6a6a6" />

        <Button
            android:id="@+id/buttonRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextDiyastolik"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_button"
            android:text="Kaydet"
            android:textColor="#ffffff" />
    </RelativeLayout>
</ScrollView>
